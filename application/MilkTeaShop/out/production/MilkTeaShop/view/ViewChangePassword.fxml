<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import javafx.geometry.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane styleClass="customAnchorPane" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1">
    <children>
        <VBox styleClass="customVBox">
            <children>
                <Label styleClass="customTitle" text="CHANGE PASSWORD" textAlignment="CENTER" />
                <GridPane styleClass="customGridPane">
                    <columnConstraints>
                        <ColumnConstraints hgrow="SOMETIMES" maxWidth="185.0" minWidth="10.0" prefWidth="147.0" />
                        <ColumnConstraints hgrow="SOMETIMES" maxWidth="268.0" minWidth="10.0" prefWidth="245.0" />
                    </columnConstraints>
                    <rowConstraints>
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                    </rowConstraints>
                    <children>
                        <Label styleClass="customLable" text="Old Password" />
                        <Label styleClass="customLable" text="New Password" GridPane.rowIndex="1" />
                        <Label styleClass="customLable" text="Repeat New Password" GridPane.rowIndex="2" />
                        <PasswordField fx:id="oldPassword" styleClass="customPaswordField" GridPane.columnIndex="1" />
                        <PasswordField fx:id="newPassword" styleClass="customPaswordField" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                        <PasswordField fx:id="repeatNewPassword" styleClass="customPaswordField" GridPane.columnIndex="1" GridPane.rowIndex="2" />
                    </children>
                </GridPane>
                <Button mnemonicParsing="false" onAction="#submit" styleClass="customButton" text="Submit">
                    <font>
                        <Font size="14.0" />
                    </font>
                </Button>
            </children>
        </VBox>
    </children>
</AnchorPane>
