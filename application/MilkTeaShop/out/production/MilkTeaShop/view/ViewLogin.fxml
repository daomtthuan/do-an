<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane id="wrapper" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1">
   <children>
       <AnchorPane id="container">
          <children>
              <VBox styleClass="customVBox">
                 <children>
                     <Label id="title" text="LOGIN" />
                     <GridPane styleClass="customGridPane">
                         <columnConstraints>
                             <ColumnConstraints />
                             <ColumnConstraints />
                         </columnConstraints>
                         <rowConstraints>
                             <RowConstraints />
                             <RowConstraints />
                         </rowConstraints>
                        <children>
                            <Label text="Account" />
                            <Label text="Password" GridPane.rowIndex="1" />
                            <TextField fx:id="name" styleClass="customField" GridPane.columnIndex="1" />
                            <PasswordField fx:id="password" styleClass="customField" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                        </children>
                     </GridPane>
                     <Button fx:id="submit" alignment="CENTER" mnemonicParsing="false" styleClass="customButton" text="Login" />
                 </children>
              </VBox>
          </children>
       </AnchorPane>
   </children>
</AnchorPane>
