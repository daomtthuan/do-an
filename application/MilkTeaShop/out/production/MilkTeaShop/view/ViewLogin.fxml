<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import javafx.geometry.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane styleClass="customAnchorPane" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1">
   <children>
       <VBox alignment="CENTER" spacing="10.0" styleClass="customVBox" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
           <padding>
               <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
           </padding>
          <children>
              <Label alignment="CENTER" styleClass="customTitle" text="LOGIN" textAlignment="CENTER" />
              <GridPane hgap="10.0" styleClass="customGridPane" vgap="10.0">
                  <columnConstraints>
                      <ColumnConstraints halignment="LEFT" />
                      <ColumnConstraints halignment="LEFT" />
                  </columnConstraints>
                  <rowConstraints>
                      <RowConstraints valignment="CENTER" />
                      <RowConstraints valignment="CENTER" />
                  </rowConstraints>
                  <padding>
                      <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                  </padding>
                 <children>
                     <Label alignment="CENTER" styleClass="customLabel" text="Account" />
                     <Label styleClass="customLabel" text="Password" GridPane.rowIndex="1" />
                     <TextField fx:id="name" styleClass="customTextField" GridPane.columnIndex="1" />
                     <PasswordField fx:id="password" styleClass="customPasswordField" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                 </children>
              </GridPane>
              <Button alignment="CENTER" defaultButton="true" mnemonicParsing="false" onAction="#login" styleClass="customButton" text="Login" />
          </children>
       </VBox>
   </children>
   <padding>
      <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
   </padding>
</AnchorPane>
